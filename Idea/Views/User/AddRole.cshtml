<div class="content-wrapper">
    <table class="table table-bordered">
        <tr>
            <th>Current Roles</th>
        </tr>
        @if (currentRoles.Count() == 0)
        {
            <tr><td colspan="2">There is no role.</td></tr>
        }
        else
        {
            foreach (var role in currentRoles)
            {
                <tr>
                    <td>@role</td>
                    <td></td>
                    <td>
                        <form asp-action="DeleteRole">
                            <input type="hidden" asp-for="Id" name="userId" />
                            <input type="hidden" asp-for="@role.Id" name="roleId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>Remaining Roles</th>
            <th></th>
        </tr>
        @if (remainingRoles.Count() == 0)
        {
            <tr><td colspan="2">There is no remaining role.</td></tr>
        }
        else
        {
            foreach (var role in remainingRoles)
            {
                <tr>
                    <td>@role</td>
                    <td>
                        <form asp-action="AddRole">
                            <input type="hidden" asp-for="Id" name="userId" />
                            <input type="hidden" asp-for="@role.Id" name="roleId" />
                            <button type="submit" class="btn btn-success">Add</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    <div>
        <a asp-action="Index" class="btn btn-primary">Back to list</a>
    </div>
</div>
